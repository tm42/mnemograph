{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.tm42/mnemograph",
  "description": "Event-sourced knowledge graph memory for Claude Code with semantic search",
  "repository": {
    "url": "https://github.com/tm42/mnemograph",
    "source": "github"
  },
  "version": "0.1.1",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "mnemograph",
      "version": "0.1.1",
      "runtimeHint": "uvx",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Path to memory storage directory",
          "name": "MEMORY_PATH",
          "isRequired": false,
          "default": "~/.claude/memory"
        }
      ]
    }
  ]
}
